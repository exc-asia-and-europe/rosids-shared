<?xml version="1.0" encoding="UTF-8"?>
<project default="xar" name="cluster-shared">
    <property name="project.version" value="1.0.6.2"/>
    <property name="project.app" value="cluster-shared"/>
    <property name="build.dir" value="build"/>
    <target name="xar">
        <mkdir dir="${build.dir}"/>
        <zip basedir="." destfile="${build.dir}/${project.app}-${project.version}.xar" excludes="${build.dir}/* .idea *.iml"/>
    </target>
    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>
</project>
